<Window x:Class="Voronoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestStuff"
        mc:Ignorable="d"
        Title="MainWindow" Height="520" Width="800">
    <Grid>
        <Canvas Name="TheCanvas" MouseDown="WhenMouseDown" Height="450" Width="800" Margin="0,-10,0,10">
            <Canvas.Background>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Canvas.Background>
        </Canvas>
        <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="Sweep" Background="LightBlue" Height="20" Width="100" Content="Sweep!"/>
        <Button Click="Clear" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="100" Content="Clear" Background="LightBlue"/>
    </Grid>
</Window>
